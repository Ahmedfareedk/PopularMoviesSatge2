<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dfe0d4">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:padding ="8dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/cardViewBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detailContentSize"
                android:textStyle="bold"
                android:textColor="@color/content_text"
                android:layout_centerHorizontal="true"
                android:padding = "@dimen/movie_title_padding"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_content"
                android:textStyle="normal"
                android:textSize="@dimen/plotTextSize"
                android:layout_below="@+id/author_name"
                android:paddingRight = "@dimen/movie_title_padding"
                android:paddingLeft="@dimen/movie_title_padding"
                android:paddingBottom="@dimen/movie_title_padding"
                android:textColor="@color/movieTitle"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="@color/viewColor"/>

</LinearLayout>